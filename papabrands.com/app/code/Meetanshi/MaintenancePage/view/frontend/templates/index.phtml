    if ($helper->getPageDesign()) {
        if ($helper->getPageDesign() == '1') {
            echo $block->getLayout()->createBlock("Meetanshi\MaintenancePage\Block\Index")->setTemplate("Meetanshi_MaintenancePage::firstDesign.phtml")->toHtml();
